#include "stdafx.h"
#include "std_lib_facilities.h"



int main()
{
	cout << "What's yo name, nigga? (make it one word, I don't like spaces, bitch.) \n";
	string name;
	cin >> name;
	cout << "hey bitch nigga, is yo name really " << name << "? Whatever, nigga. \n" <<
		"But now type in two numbers.\n";
	int num1;
	int num2;
	cout << "Type in a numbah: ";
	cin >> num1;
	cout << "aight, now type in another one: ";
	cin >> num2;
	cout << "Did you know those two numbers added together makes " << num1 + num2 << "?\n";
	cout << "But you didn't know that cuz you a dumb nigga.\n" << "Heres some other shit you didn't know: \n"
