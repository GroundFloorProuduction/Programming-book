#include "stdafx.h"
#include "std_lib_facilities.h"



int main()
{
	cout << "What's yo name, nigga? (make it one word, I don't like spaces, bitch.) \n";
	string name;
	cin >> name;
	cout << "hey bitch nigga, is yo name really " << name << "? Whatever, nigga. \n" <<
		"But now type in two numbers.\n";
	int num1;
	int num2;
	cout << "Type in a numbah: ";
	cin >> num1;
	cout << "aight, now type in another one: ";
	cin >> num2;
	cout << "Did you know those two numbers added together makes " << num1 + num2 << "?\n";
	cout << "But you didn't know that cuz you a dumb nigga.\n" << "Heres some other shit you didn't know: \n"
		<< "If you divided that shit it would be: " << num1 / num2 << ". \n";
	cout << "If you mutiplied that shit, it would've been: " << num1 * num2 << ". \n";
	cout << "If you squared those numbahs, they are: " << num1*num1 << ", and " << num2*num2 << ". \n";
	string noun;
	string adj;
	cout << "Okay, nigga. So I wan't you to to put in a noun. \n";
	cin >> noun;
	cout << "Iight, put in a word that describes that noun. \n";
	cin >> adj;
	cout << "So you think a " << noun << " is " << adj << "? Well I think you're a... " << adj << " nigga. \n";
	string newname = adj + name;
	cout << "well I guess now I'mma start callin you a " << newname << ". \n ";
	cout << "You know what I mean, " << newname << "? \n";
	keep_window_open();
	return 0;
}
